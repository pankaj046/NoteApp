<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="#f9fbff"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/title_tv"
            android:text="Title"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:maxLines="1"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorPrimary"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/title_tv"
            android:id="@+id/last_updated"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:id="@+id/layout_reminder"
            app:layout_constraintTop_toBottomOf="@id/last_updated">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/reminder_iv"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_bell_40dp"
                android:contentDescription="@string/app_name" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_toEndOf="@id/reminder_iv"
                android:textColor="@color/colorGray"
                android:maxLines="1"
                android:text="dkjkxjf"
                android:layout_marginStart="10dp"
                android:id="@+id/reminder"/>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>